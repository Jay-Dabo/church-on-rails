<%= render 'people/people/title', title: 'Your profile', short: @person.new_record?, icon: 'user-circle-o' %>

<div class="container-xs">
  <% if @person.new_record? %>
    <p class="size-xs-small mt-2">
      Welcome! To add your account to the church database,
      we respectfully ask that you provide some identity information.
    </p>

    <p class="size-xs-small text-light">
      Fields in red are required.
    </p>
  <% end %>

  <%= flash_messages %>
  <%= form_for(@person, url: account_person_path) do |f| %>

    <div class="list-group mb-1">
      <%= render 'shared/list_group_header', title: 'Details' %>
      <%= render 'account/people/form_fields', f: f, person: @person, email: false %>
    </div>

    <%= render 'shared/form_submit', title: 'Save changes', icon: @person %>
  <% end %>
</div>
