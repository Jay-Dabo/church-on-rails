<% if can? :create, Event %>
  <%= link_to new_event_path, class: 'btn btn-danger float-xs-right' do %>
    <%= fa_icon 'plus-circle' %> New
  <% end %>
<% end %>

<%= render 'shared/title', title: 'Events', background: :event %>

<div class="list-group">
  <div class="list-group-item list-group-item-secondary">
    Upcoming events
  </div>
  <%= render partial: 'events/events/event_item', collection: @events.sort_by{|t| t.schedule.next_datetime } %>
</div>
