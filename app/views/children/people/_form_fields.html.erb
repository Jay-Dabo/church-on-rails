<%= render 'shared/list_group_item_field', f: f, field: :first_name, required: true, autocapitalize: :words, autofocus: true %>
<%= render 'shared/list_group_item_field', f: f, field: :middle_name, autocapitalize: :words %>
<%= render 'shared/list_group_item_field', f: f, field: :last_name, required: true, autocapitalize: :words %>

<%= render 'shared/list_group_item_field', f: f, field: :gender do %>
  <%= f.select :gender, genders, { include_blank: true }, class: 'form-control', data: { width: '100%', selectpicker: true, placeholder: '', :'allow-clear' => true } %>
<% end %>

<%= render 'shared/list_group_item_field', f: f, field: :dob do %>
  <%= f.date_select :dob, data: { :'view-mode' => 'years', :'show-clear' => true } %>
<% end %>

<%= render 'shared/list_group_item_field', f: f, field: :family_ids do %>
  <%= f.select :family_ids, [['< Start new family >', 'New']] + Family.all.map{|family| [ family.name, family.id ] }, { include_blank: true },
               class: 'form-control',
               data: { selectpicker: true, placeholder: 'Choose a Family', :'allow-clear' => true, width: '100%' } %>
  <%= f.text_field :family_name, class: 'form-control mt-sm', placeholder: 'Family name' %>
<% end %>
