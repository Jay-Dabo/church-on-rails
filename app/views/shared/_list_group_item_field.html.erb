<div class="list-group-item">
  <div class="row">
    <div class="col-sm-5 <%= 'field-required' if defined?(required) %>"><%= f.label field, class: 'form-control-static mb-0' %></div>
    <div class="col-sm-7">

      <% content = yield %>
      <% if content.present? %>
        <%= content %>
      <% else %>
        <%= f.send (local_assigns[:control] || :text_field), field, class: 'form-control', placeholder: local_assigns[:placeholder] %>
      <% end %>
    </div>
  </div>
</div>
