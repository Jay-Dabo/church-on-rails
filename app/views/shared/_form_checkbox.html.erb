<% object = local_assigns[:object] || f.object %>

<label class="custom-<%= local_assigns[:type] || 'checkbox' %> custom-control">
  <%= f.check_box field, class: 'custom-control-input' %>
  <span class="custom-control-indicator"></span>

  <%= local_assigns[:name] || field_name(object, field) %>

  <% if local_assigns[:help] %>
    <div class="text-light size-xs-tiny mt-xs"><%= help.is_a?(String) ? help : field_help(object, field) %></div>
  <% end %>
</label>
