<%= render 'shared/list_group_item_field', f: f, field: :prefix do %>
  <%= f.select :prefix, prefixes, { include_blank: true }, class: 'form-control', data: { selectpicker: true, placeholder: '', :'allow-clear' => true } %>
<% end %>

<%= render 'shared/list_group_item_field', f: f, field: :first_name, required: true, autocapitalize: :words, autofocus: true %>
<%= render 'shared/list_group_item_field', f: f, field: :middle_name, autocapitalize: :words %>
<%= render 'shared/list_group_item_field', f: f, field: :last_name, required: true, autocapitalize: :words %>
<%= render 'shared/list_group_item_field', f: f, field: :suffix, autocapitalize: :words %>

<%= render 'shared/list_group_item_field', f: f, field: :gender do %>
  <%= f.select :gender, genders, { include_blank: true }, class: 'form-control',
               data: { data: genders.map{|gender| {id: gender[1], text: gender[0], icon: gender[0].downcase} }, selectpicker: true, placeholder: '', :'allow-clear' => true } %>
<% end %>

<%= render 'shared/list_group_item_field', f: f, field: :dob do %>
  <%= f.date_select :dob, data: { :'view-mode' => 'years', :'show-clear' => true } %>
<% end %>

<%= render 'shared/list_group_item_field', f: f, field: :joined_at do %>
  <%= f.date_select :joined_at, data: { :'show-clear' => true } %>
<% end %>

<%= render 'shared/list_group_item_field', f: f, field: :email, control: :email_field do %>
  <%= f.email_field :email, class: 'form-control' %>
  <%= field_error f.object.user, :email %>
<% end %>

<%= render 'shared/list_group_item_field', f: f, field: :phone, control: :phone_field %>
<%= render 'shared/list_group_item_field', f: f, field: :facebook, placeholder: "e.g. facebook.com/username", autocapitalize: :none %>
<%= render 'shared/list_group_item_field', f: f, field: :twitter,  placeholder: "e.g. twitter.com/username",  autocapitalize: :none %>
