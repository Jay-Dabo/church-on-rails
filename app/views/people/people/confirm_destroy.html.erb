<%= render 'people/people/title', background: :danger %>

<div class="container-xs">
  <div class="list-group mb-2">
    <%= render 'shared/list_group_header', title: 'Remove person' %>

    <div class="list-group-item">
      <p>
        If you do this, <strong><%= @person %></strong> will be removed from the database.
        Are you absolutely sure?
      </p>

      <%= link_to 'No, stop!', @person, class: 'btn btn-secondary btn-block btn-lg mb-sm' %>
      <%= button_to 'Yes, do it.', @person, method: :delete, class: 'btn btn-danger btn-block btn-lg mb-sm' %>
    </div>
  </div>
</div>
