<%= render 'people/people/menu', active: :password do %>
  <h2><%= @person %></h2>

  <%= form_for @person.user, url: person_user_password_path(@person) do |f| %>
    <div class="list-group mb-2">
      <%= render 'shared/list_group_header', title: 'Change password' %>
      <%= render 'shared/list_group_item_field', f: f, field: :password, control: :password_field, label: 'New password' %>
    </div>

    <%= render 'shared/form_submit', icon: :lock, title: 'Change password' %>
  <% end %>
<% end %>
