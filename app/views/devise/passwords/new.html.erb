<div class="container-login pb-3 pt-1">
  <h2 class="text-xs-center mb-1">Forgotten your password?</h2>

  <div class="size-xs-small mb-1">If you've forgotten your password we can email you instructions to reset it.</div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
     <%= devise_error_messages! %>

     <div class="input-group">
       <label class="input-group-addon" for="user_email">
         <span class="fa fa-envelope fa-1x"></span>
       </label>
       <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email', value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
     </div>

     <div class="actions mt-1">
       <%= f.submit "Send me reset instructions", class: 'btn btn-primary btn-block btn-lg' %>
     </div>
   <% end %>

  <%= render "devise/shared/links" %>
</div>
