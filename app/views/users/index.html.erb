<h2 class="text-xs-center mb-1">Users</h2>

<%= render 'shared/list_group', collection: @users do |user| %>

  <div class="row">
    <div class="col-sm-6">
      <%= link_to user, class: 'text-ellipsis' do %>
        <%= user.name %>
      <% end %>
    </div>
    <div class="col-sm-6">
      <div class="text-ellipsis text-light">
        <%= user.email %>
      </div>
    </div>
  </div>

<% end %>
